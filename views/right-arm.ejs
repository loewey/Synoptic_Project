    <div class="main-content">
        <div class="flip-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <!-- Front content -->
                        <img src="/healthcare/photos/arm_cramp.png" alt="Cramp">
                    </div>
                    <div class="flip-card-back">
                        <!-- Back content -->
                         <h2><bold>Cramp</bold></h2>
                        <h3>

                            <p>stretch affected area</p>
                            <p>massage affected area</p>
                            <p>apply ice to affected area</p>
                            </h3>
                    </div>
                </div>
            </div>
            <div class="flip-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <!-- Front content -->
                        <img src="/healthcare/photos/sprain.png" alt="Sprain">
                    </div>
                    <div class="flip-card-back">
                        <!-- Back content -->
                         <h2><bold>Sprain</bold></h2>
                        <h3>

                            <p>rest affected area</p>
                            <p>apply ice </p>
                            <p>elevate injured area</p>
                            </h3>
                    </div>
                </div>
            </div>
            <div class="flip-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <!-- Front content -->
                        <img src="/healthcare/photos/cut.png" alt="minor Cut">
                    </div>
                    <div class="flip-card-back">
                        <!-- Back content -->
                         <h2><bold>minor cut</bold></h2>
                        <h3>

                            <p>clean affected area</p>
                            <p>cover with bandage</p>
                            <p>re apply bandage after a couple days</p>
                            </h3>
                    </div>
                </div>
            </div>
            <div class="flip-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <!-- Front content -->
                        <img src="/healthcare/photos/hand_burn.png" alt="Burn">
                    </div>
                    <div class="flip-card-back">
                        <h2><bold>Burn</bold></h2>
                        <!-- Back content -->
                        <h3>

                            <p>apply constant running cold water on area after burning</p>
                            <p>apply cold cloth to the burned area</p>
                            <p>seek doctor</p>
                            </h3>
                    </div>
                </div>
